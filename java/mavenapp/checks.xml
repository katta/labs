<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.2//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_2.dtd">

<!--
    Use -Dcheckstyle.config.location=checks.xml to override this
-->

<module name="Checker">

    <module name="FileLength">
        <property name="max" value="500" />
    </module>



    <module name="TreeWalker">

        <property name="cacheFile" value="${checkstyle.cache.file}"/>

        <module name="ClassFanOutComplexityCheck">
            <property name="max" value="30" />
        </module>

        <module name="ClassDataAbstractionCouplingCheck">
            <property name="max" value="10" />
        </module>

        <module name="AnonInnerLengthCheck">
            <property name="max" value="35" />
        </module>

        <module name="MethodLength">
            <property name="max" value="30" />
        </module>

        <module name="ParameterNumberCheck">
            <property name="max" value="6" />
        </module>

        <module name="CyclomaticComplexityCheck">
            <property name="max" value="10" />
        </module>

        <module name="NestedIfDepthCheck">
            <property name="max" value="3" />
        </module>

        <module name="NestedTryDepthCheck">
            <property name="max" value="2" />
        </module>

        <module name="BooleanExpressionComplexityCheck">
            <property name="max" value="3" />
        </module>

        <module name="MissingSwitchDefaultCheck">
        </module>

    </module>

</module>
